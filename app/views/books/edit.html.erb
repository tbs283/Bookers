<body>
 <h1>Editing Book</h1>
 <form>
   <%= form_with model:@book, local: true do |f| %>
    <div class="field">
      <label>Title</label>
      <div><%= f.text_field :title %></div>
    </div>
    <div class="field">
      <label>Body</label>
      <div><%= f.text_area :body %></div>
    </div>
    <div class="action"><%= f.submit 'Update Book' %></div>
  <% end %>
 </form>

 <a class="show"><%= link_to "Show", book_path(@book) %></a>
  |
 <a class="back"><%= link_to "Back", books_path %></a>
</body>