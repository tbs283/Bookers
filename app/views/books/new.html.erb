<h1>Books</h1>
<div class="book-box">
 <% @book.each do |book|%>
   <span><%= link_to book.title, book_path(book) %></span>
   <span><%= link_to book.body, book_path(book) %></span>
 <% end %>
</div>
<h3>New book</h3>
<%= form_with model:@book, local:true do |f| %>
 <h5>Title</h5>
 <%= f.text_field :title %>
 <h5>Body</h5>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>